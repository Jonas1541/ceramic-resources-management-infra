# ================================================
# CONFIGURAÇÃO DO DOMÍNIO (Caddy)
# ================================================
# Em desenvolvimento use: localhost
# Em produção use: ceramic-api.vps-kinghost.net
SITE_ADDRESS=localhost

# ================================================
# DATABASE (MySQL)
# ================================================
DB_ROOT_PASSWORD=sua_senha_root
DB_USER=app_admin
DB_PASSWORD=sua_senha_app

# ================================================
# SPRING BOOT CONFIG
# ================================================
# Credenciais do Datasource (usadas pelo Spring para conectar no banco)
main.datasource.username=app_admin
main.datasource.password=sua_senha_app

tenant.datasource.username=app_admin
tenant.datasource.password=sua_senha_app

# Tokens e Segredos
api.security.token.secret=SEGREDO_DO_JWT_AQUI
internal.job.auth.token=TOKEN_INTERNO_AQUI

# ================================================
# EMAIL (SendGrid)
# ================================================
spring.mail.host=smtp.sendgrid.net
spring.mail.port=587
spring.mail.username=apikey
spring.mail.password=SUA_CHAVE_SENDGRID_AQUI
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true